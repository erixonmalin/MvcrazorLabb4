@model IEnumerable<MvcrazorLabb4.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<h1>Kundregister</h1>

<p>
    <a asp-action="Create">Lägg till ny kund | </a>
    <a asp-action="SearchCustomer">Sök efter boklist för enskild kund</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StreetName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HouseNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HouseNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CustomerId">Ändra</a> |
                <a asp-action="Details" asp-route-id="@item.CustomerId">Detaljer</a> |
                <a asp-action="Delete" asp-route-id="@item.CustomerId">Radera</a>
            </td>
        </tr>
}
    </tbody>
</table>
